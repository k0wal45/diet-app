// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String 
  clients   Client[]
}

model Client {
  id         Int      @id @default(autoincrement())
  name       String
  email      String?  @unique
  age        Int?
  weight     Float?
  height     Float?
  sex        enum Sex {
    Male
    Female
  }
  createdBy  Int
  user       User     @relation(fields: [createdBy], references: [id])
}

