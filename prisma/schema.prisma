generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String
  password String
  role     UserRole
  clients  Client[]
}

model Client {
  id              Int     @id @default(autoincrement())
  name            String
  email           String? @unique
  age             Int?
  weight          Float?
  height          Float?
  sex             Sex
  activityFactor  Float   @default(1.2)
  createdBy       Int
  trainer         User    @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  diets           Diet[]
}

model Product {
  id             Int      @id @default(autoincrement())
  name           String
  description    String?
  category       ProductCategory
  protein        Float
  fat            Float
  carbs          Float
  kcal           Float
  unit           Unit
  amount         Float
  createdAt      DateTime @default(now())
  mealProducts   MealProduct[]
}

model Meal {
  id             Int      @id @default(autoincrement())
  name           String
  description    String?
  createdAt      DateTime @default(now())
  mealProducts   MealProduct[]
  dietMeals      DietMeal[]
}

model MealProduct {
  id        Int     @id @default(autoincrement())
  mealId    Int
  productId Int
  quantity  Float
  meal      Meal    @relation(fields: [mealId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Diet {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  saved       Boolean  @default(false)
  createdAt   DateTime @default(now())
  clientId    Int
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  dietMeals   DietMeal[]
}

model DietMeal {
  id     Int  @id @default(autoincrement())
  dietId Int
  mealId Int
  diet   Diet @relation(fields: [dietId], references: [id], onDelete: Cascade)
  meal   Meal @relation(fields: [mealId], references: [id], onDelete: Cascade)
}

enum Sex {
  MALE
  FEMALE
}

enum UserRole {
  ADMIN
  DIETICIAN
  USER
}

enum Unit {
  G
  ML
  SLICE
}

enum ProductCategory {
  MEAT
  FISH
  DAIRY
  FRUITS
  VEGETABLES
  BREAD
  COOKING
  LEGUMES
  SPICES
  GRAINS
  GREENS
  OTHER
  SUPPLEMENTS
}
